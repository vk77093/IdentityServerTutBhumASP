@model ForgotPasswordVM
<h1 class="text-info">Forgot Password Request</h1>
<div class="container">
    <form asp-controller="Account" asp-action="ForgotPassword" method="post">
        <h4 class="text-info">Enter Email id for get Code</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="EmailId" class="form-control">Email Id</label>
           <div class="col-sm-6 mb-2">
               <input asp-for="EmailId" class="form-control"/>
                <span asp-validation-for="EmailId" class="text-danger"></span>
           </div>
        </div>
         <div class="form-group row">
            <div class="col-sm-4">

            </div>
            <div class="col-md-6 mt-2">
                <button type="submit" class="btn btn-info btn-lg">Get Token</button>
            </div>
        </div>
    </form>
</div>
