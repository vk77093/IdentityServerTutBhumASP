@model RegisterVM
<h1 class="text-info">Register User</h1>
<div class="container">
    <form asp-controller="Account" asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" role="form">
        <h4 class="text-info">Create A new Account</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-4 col-form-label">Email Id</label>
            <div class="col-sm-6 mb-2">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"/>
            </div>
        </div>
        <div class="form-group row">
            <label aasp-for="AddtionlName" class="col-sm-4 col-form-label">User Name</label>
            <div class="col-sm-6 mb-2">
                <input asp-for="AddtionlName" class="form-control"/>
                <span asp-validation-for="AddtionlName" class="text-danger"/>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-4 col-form-label">Password</label>
            <div class="col-sm-6 mb-2">
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"/>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label">Confirm Password</label>
            <div class="col-sm-6 mb-2">
                <input asp-for="ConfirmPassword" class="form-control"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"/>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RoleSelected" class="col-sm-4 col-form-label">Select User Role</label>
            <div class="col-sm-6 mb-2">
                <select class="form-select" asp-items="@Model.RoleList" asp-for="RoleSelected">
                   <option disabled selected>--Select Role--</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">

            </div>
            <div class="col-md-6 mt-2">
                <button type="submit" class="btn btn-info btn-lg">Register Here</button>
            </div>
        </div>
        
    </form>
</div>
<!--Client Side Validate Script-->
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
