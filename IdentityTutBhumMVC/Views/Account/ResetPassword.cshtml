@model ResetPasswordVM
<h1 class="text-info">User Password Reset</h1>
<div class="container">
    <form asp-controller="Account" asp-action="ResetPassword"  method="post" role="form">
        <h4 class="text-info">Reset Your Password Here</h4>
        <hr />
        <input type="hidden" asp-for="code"/>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-4 col-form-label">Email Id</label>
            <div class="col-sm-6 mb-2">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"/>
            </div>
        </div>
        
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-4 col-form-label">Password</label>
            <div class="col-sm-6 mb-2">
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"/>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label">Confirm Password</label>
            <div class="col-sm-6">
                <input asp-for="ConfirmPassword" class="form-control"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"/>
            </div>
        </div>
        @*<div class="form-group row">
            <label aasp-for="AddtionlName" class="col-sm-4 col-form-label">Reset Code</label>
            <div class="col-sm-6 mb-2">
                <input asp-for="code" class="form-control"/>
                <span asp-validation-for="code" class="text-danger"/>
            </div>
        </div>*@
        <div class="form-group row">
            <div class="col-sm-4">

            </div>
            <div class="col-md-6 mt-2">
                <button type="submit" class="btn btn-info btn-lg">Reset Here</button>
            </div>
        </div>
        
    </form>
</div>
<!--Client Side Validate Script-->
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

