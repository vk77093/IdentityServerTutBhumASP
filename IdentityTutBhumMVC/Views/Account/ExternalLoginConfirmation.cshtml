@model ExternalLoginConfirmationVm
<h1 class="text-info">Register</h1>
<h3 class="text-success">Associate Your @ViewData["ProviderDisplayName"] Accout</h3>
<div class="container">
    <form asp-controller="Account" asp-action="ExternalLoginConfirmation" method="post" role="form"
    asp-route-returnUrl="@ViewData["ReturnUrl"]">
<h4>Associate Form</h4>
<div asp-validation-summary="All" class="text-danger"></div>
<p>You Have Some Account with <strong>@ViewData["ProviderDisplayName"].</strong>
Please Enter a UserName for the site below and enter the refiger button for finish Loggin In    
</p>
<div class="form-group row">
            <label asp-for="Email" class="col-sm-4 col-form-label">Email Id</label>
            <div class="col-sm-6 mb-2">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"/>
            </div>
        </div>
        <div class="form-group row">
            <label aasp-for="AddtionlName" class="col-sm-4 col-form-label">User Name</label>
            <div class="col-sm-6 mb-2">
                <input asp-for="AddtionlName" class="form-control"/>
                <span asp-validation-for="AddtionlName" class="text-danger"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">

            </div>
            <div class="col-md-6 mt-2">
                <button type="submit" class="btn btn-info btn-lg">Register</button>
            </div>
        </div>
</form>
</div>
