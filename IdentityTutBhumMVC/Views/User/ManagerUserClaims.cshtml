@model UserClaimsViewModel
<div class="container">
    <div class="row">
        <div class="col-sm-8 col-md-8">
            <div class="card">
                <div class="card-header text-center text-info">Add Or Remove The User Claims</div>
            </div>
            <form asp-controller="User" asp-action="ManagerUserClaims" role="form" method="post">
                    <input asp-for="@Model.UserId" hidden/>
            <div class="card-body">
                
                    @for(int i=0; i < Model.Claims.Count; i++)
                    {
                        <div class="mt-2 form-check">
                            <input asp-for="@Model.Claims[i].ClaimType" hidden/>
                            <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input"/>
                            <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                                @Model.Claims[i].ClaimType
                            </label>
                        </div>
                    }
            </div>
            <div class="card-footer text-center">
                <button type="submit" class="btn btn-primary mr-2">Update Calims</button>
                <a asp-action="Index" class="btn btn-secondary mr-2">Go Back</a>
            </div>
              </form>
        </div>
    </div>
</div>
