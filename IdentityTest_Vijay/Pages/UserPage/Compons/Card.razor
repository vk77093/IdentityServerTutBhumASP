<div class="card">
    <div class="card-header">
        <h4 class="text-center text-info card-title">@CardTitle</h4>
    </div>
    <div class="card-body">@CardBody</div>
</div>

@code {
    [Parameter]
    public string? CardTitle { get; set; }
    [Parameter]
    public RenderFragment? CardBody { get; set; }
}
